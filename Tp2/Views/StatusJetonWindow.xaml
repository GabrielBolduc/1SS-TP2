<Window x:Class="Tp2.Views.StatusJetonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statut du jeton"
        Height="360" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer Margin="10">
        <StackPanel>
            <TextBlock x:Name="txtInfos"
                       TextWrapping="Wrap"
                       FontFamily="Consolas"
                       FontSize="13"
                       Margin="0,0,0,10"/>
            <Button Content="Fermer" IsCancel="True"
                    Width="100"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Window>
