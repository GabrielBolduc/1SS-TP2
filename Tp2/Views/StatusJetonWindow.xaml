<Window x:Class="Tp2.Views.StatusJetonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statut du jeton"
        Height="360" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding Status}"
                       TextWrapping="Wrap"
                       FontFamily="Consolas"
                       FontSize="13"
                       Margin="0,0,0,10"/>
            <Button Content="Rafraîchir"
                    Command="{Binding RafraichirCommand}"
                    Width="100"
                    HorizontalAlignment="Left"/>
            <Button Content="Fermer"
                    IsCancel="True"
                    Width="100"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Window>
