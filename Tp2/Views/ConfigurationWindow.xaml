<Window x:Class="Tp2.Views.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration"
        Height="220" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Jeton :" />
        <TextBox Grid.Row="1"
                 Text="{Binding Jeton, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Sauver"
                    Command="{Binding SauverCommand}"
                    Margin="0,10,10,0" Width="100" />
            <Button Content="Annuler"
                    IsCancel="True"
                    Width="100" />
        </StackPanel>
    </Grid>
</Window>
